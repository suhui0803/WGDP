{
    "name": "DPNET_TiO2",
    "n_gpu": 0,
    "arch": {
        "type": "DPMODEL",
        "args": {
            "symbol_features": 2,
            "embedding_layers": [
                15,
                30
            ],
            "Rcut": 6.5,
            "fitting_layers": [
                120,
                120,
                120
            ]
        }
    },
    "data_loader": {
        "type": "SystemDataLoader",
        "args": {
            "data_dir": "./data_tio2/train",
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 2,
            "drop_last": true
        }
    },
    "valid_data_loader": {
        "type": "SystemDataLoader",
        "args": {
            "data_dir": "./data_tio2/valid",
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 2,
            "drop_last": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1.0e-03,
            "eps": 1e-08,
            "weight_decay": 1e-08,
            "amsgrad": false
        }
    },
    "loss": {
        "type": "mse_loss",
        "args": {
            "start_pref_e": 0.001,
            "limit_pref_e": 0.001,
            "start_pref_f": 1000,
            "limit_pref_f": 1000,
            "decay_step_size": 100
        }
    },
    "metrics": [
        "rmse"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.9,
            "last_epoch": -1
        }
    },
    "trainer": {
        "epochs": 100000,
        "save_dir": "saved/",
        "save_period": 20,
        "verbosity": 2,
        "disp_freq": 1,
        "monitor": "off",
        "early_stop": 100,
        "tensorboard": false
    }

}
